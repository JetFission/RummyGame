#include <iostream>
#include "Deck.h"
#include "Card.h"

using namespace std;

//----------------4/30/2017-------------//

int main()
{
	Deck player;
	Deck computer;
	Deck mainDeck;
	Deck gateKeeper;
	

	mainDeck.populateDeck();
	mainDeck.shuffle();

	mainDeck.printDeck();

	gateKeeper.dealHands(player, mainDeck);

	player.scanSet();

	gateKeeper.dealHands(computer, mainDeck);

	char choice = ' ';

	cout << "choice? " << endl;
	cin >> choice;

	while (choice != 'q')
	{
		player.addCard(mainDeck);

		mainDeck.deleteCard();

		player.scanSet();

		cout << "choice? " << endl;
		cin >> choice;

		player.printSet();
	}

	player.printHand();

	player.printSet();

	//computer.printHand();

	mainDeck.printDeck();


	system("pause");
	return 0;
}
