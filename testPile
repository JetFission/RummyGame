#include <iostream>
#include "Deck.h"

using namespace std;

//----------------4/17/2017 @ 10:24pm-------------//

int main()
{
	Deck player;
	Deck computer;
	Deck mainDeck;
	Deck gateKeeper; //used to access functions
	Deck pile;

	mainDeck.populateDeck();
	mainDeck.shuffle();

	gateKeeper.dealHands(player,mainDeck);

	mainDeck.addCard(pile);

	pile.printPile();

	player.printHand();


	system("pause");
	return 0;
}
